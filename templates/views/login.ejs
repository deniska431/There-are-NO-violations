<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Авторизация</title>
    <link rel="stylesheet" href="./css/style.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
  </head>
  <body>



<!-- Заголовок -->
<div class="container">
  <header class="d-flex flex-wrap align-items-center justify-content-center justify-content-md-between py-3 mb-4 border-bottom">
      <div class="col-md-3 mb-2 mb-md-0">
          <a href="/" class="d-inline-flex link-body-emphasis text-decoration-none">
              <svg class="bi" width="40" height="32" role="img" aria-label="Bootstrap"><use xlink:href="#bootstrap"/></svg>
          </a>
      </div>
      <ul class="nav col-12 col-md-auto mb-2 justify-content-center mb-md-0">
          <li><a href="/" class="nav-link px-2" style="color: black;" >Главная</a></li>
          <li><a href="create-request" class="nav-link px-2" style="color: black;">Оставить заявление</a></li>
      </ul>
      <div class="col-md-3 text-end">
          <% if (userId) { %> <!-- Проверяем, авторизован ли пользователь -->
              <a href="profile"><button type="button" class="btn btn-outline-dark me-2">Профиль</button></a>
              <button type="button" class="btn btn-outline-danger" id="logout-button">Выход</button> <!-- Кнопка выхода -->
          <% } else { %>
              <a href="login"><button type="button" class="btn btn-dark me-2">Вход</button></a>
              <a href="register"><button type="button" class="btn btn-outline-dark">Регистрация</button></a>
          <% } %>
      </div>
  </header>
</div>



<!-- АВТОРИЗАЦИЯ -->
<div class="container" style="width: 600px; margin-top: 120px;">
    <form action="/login" method="POST">

    <h1 class="h3 mb-3 fw-normal">Авторизация</h1>

    <div class="form-floating" style="margin-top: 10px;">
        <input type="text" class="form-control" name="username" placeholder="Логин" required>
        <label for="floatingInput">Логин</label>
    </div>
    <div class="form-floating" style="margin-top: 10px;">
        <input type="password" class="form-control" name="password" placeholder="Пароль" required>
        <label for="floatingInput" >Пароль</label>
    </div>
    <button class="btn btn-dark w-100 py-2" type="submit" style="margin-top: 20px;">Войти</button>
  </form>
</div>



<!-- ПОДВАЛ -->
    <div class="container" style="margin-top: 390px;">
        <footer class="d-flex flex-wrap justify-content-between align-items-center py-3 my-4 border-top">
          <p class="col-md-4 mb-0 text-body-secondary">&copy; 2025</p>
      
          <a href="/" class="col-md-4 d-flex align-items-center justify-content-center mb-3 mb-md-0 me-md-auto link-body-emphasis text-decoration-none">
            <svg class="bi me-2" width="40" height="32"><use xlink:href="#bootstrap"/></svg>
          </a>
      
          <ul class="nav col-md-4 justify-content-end">
            <li class="nav-item"><a href="/" class="nav-link px-2 text-body-secondary">Главная</a></li>
            <li class="nav-item"><a href="services" class="nav-link px-2 text-body-secondary">Услуги</a></li>
            <li class="nav-item"><a href="create-request" class="nav-link px-2 text-body-secondary">Заказать услугу</a></li>
            <li class="nav-item"><a href="login" class="nav-link px-2 text-body-secondary">Вход</a></li>
            <li class="nav-item"><a href="register" class="nav-link px-2 text-body-secondary">Регистрация</a></li>
          </ul>
        </footer>
      </div>
        <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js" integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.min.js" integrity="sha384-0pUGZvbkm6XF6gxjEnlmuGrJXVbNuzT9qBBavbLwCsOGabYfZo0T0to5eqruptLy" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
  <script>
  document.getElementById('logout-button').addEventListener('click', async () => {
        try {
            const response = await fetch('/logout', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                },
            });

            if (!response.ok) {
                throw new Error('Ошибка при выходе из профиля');
            }

            window.location.href = '/'; 
        } catch (error) {
            console.error(error);
            alert('Не удалось выйти из профиля. ' + error.message);
        }
    });
</script>  
  </body>
    </html>